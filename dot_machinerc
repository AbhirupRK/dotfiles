# Machine specific configurations

# MacOS specific
alias b='brew'
ve() {/Applications/VESTA.app/Contents/MacOS/VESTA "$1" &> /dev/null &}
ql() {qlmanage -p "$1" &> /dev/null}

export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init - zsh)"

